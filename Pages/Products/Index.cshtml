@page
@model RazorPagesCRUD.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<a asp-page="/Products/Create" class="btn btn-success mb-3">Add Product</a>

<table class="table table-striped table-bordered table-dark">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th  class="text-end">Price</th>
            <th  class="text-end">Description</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td class="text-end">@product.Price.ToString("C")</td>
                <td class="text-end">@product.Description</td>
                <td>
                    <a asp-page="/Products/Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="/Products/Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                </td> 
            </tr>
        }
    </tbody>
</table>


